<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: INFO for all third-party libraries -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Application loggers: INFO for our code -->
    <logger name="com.fanaujie.ripple" level="DEBUG"/>
</configuration>
